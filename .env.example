# ==========================================
# Arquivo de Exemplo de Variáveis de Ambiente
# Sistema SIGA - SRNCO
# ==========================================
# IMPORTANTE: Copie este arquivo para .env e preencha com os valores reais
# NUNCA commite o arquivo .env no Git!

# Django
SECRET_KEY=sua-chave-secreta-super-segura-aqui-mude-em-producao
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,seu-dominio.com

# Banco de Dados
# Opção 1: URL completa do banco
DATABASE_URL=mysql://monitor_user:sua-senha@db:3306/monitor_srnco2

# Opção 2: Configurações individuais (se não usar DATABASE_URL)
DB_ENGINE=django.db.backends.mysql
DB_NAME=monitor_srnco2
DB_USER=monitor_user
DB_PASSWORD=sua-senha-do-banco
DB_HOST=db
DB_PORT=3306

# MySQL (para docker-compose)
MYSQL_PASSWORD=sua-senha-do-banco
MYSQL_ROOT_PASSWORD=senha-root-mysql

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-de-app
DEFAULT_FROM_EMAIL=seu-email@gmail.com

# Azure AD (para envio de emails corporativos)
AZURE_AD_CLIENT_ID=seu-client-id-azure
AZURE_AD_CLIENT_SECRET=seu-client-secret-azure
AZURE_AD_TENANT_ID=seu-tenant-id-azure
SENDER_EMAIL=email-corporativo@dominio.com

# API do Robô
API_ROBO_SECRET_HASH=hash-secreto-para-api-do-robo-mude-em-producao

# Configurações de Produção
DJANGO_SETTINGS_MODULE=config.settings
PYTHONUNBUFFERED=1
